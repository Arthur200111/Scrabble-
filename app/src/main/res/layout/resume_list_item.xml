<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resumeItemRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:background="@drawable/lobby_border_item"
    android:padding="8dp">

    <ImageView
        android:id="@+id/resumeItemImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/lobby_activity_horizontal_margin"
        android:layout_marginEnd="@dimen/lobby_activity_horizontal_margin"
        android:adjustViewBounds="true"
        android:contentDescription="Party Image"
        android:padding="8dp"
        android:scaleType="fitStart"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/resumeItemImg">


        <TextView
            android:id="@+id/resumePartyLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/resumeStateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:textSize="12sp"
            tools:text="@tools:sample/cities" />
    </LinearLayout>


</RelativeLayout>